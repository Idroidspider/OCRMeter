<% if(steps.length>0){ %>
<% for (var i=0; i<steps.length;i++){ %>
<h3>Thread #<%= (i+1) %></h3>
<table class="table table-hover">
	<thead>
		<tr>
			<th>Valid</th>
			<th>Arguments</th>
			<th>Description</th>
		</tr>
	</thead>
	<tbody>
		<% steps[i].forEach(function(s){ klass=(s.valid)?'':'error'; %>
		<tr class="<%= klass %>">
			<!--td><input type="checkbox" <%= (s.valid)?'checked':'' %>></td>
			<td><input type="text" value="<%= s.arg.join(' ') %>"></td>
			<td><input type="text" value="<%= s.description %>"></td>
			<td><a class="btn btn-danger" href="">Remove</a>
			</td-->
			<td><%= (s.valid)?'yes':'no' %></td>
			<td><%= s.arg.join(' ') %></td>
			<td><%= s.description %></td>
		</tr>
		<% }) %>
	</tbody>
</table>
<% }%>
<% }else{ %>
<div class="jumbotron">
	<h3>Steps: Something went wrong...</h3>
</div>
<% } %>
